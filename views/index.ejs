<!DOCTYPE html>
<html>
<head>
    <title>图片爬虫首页</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">
    <style type="text/css">
    .home__product {
        width: 100px;
        margin: 0 auto;
        display: block;
    }
    a {
        color: #999;
    }
    </style>
</head>
<body>
    <div id="app">
        <el-container>
            <el-header>图片爬虫程序</el-header>
            <el-container>
                <el-aside width="200px">
                    <el-button type="primary">首页图片</el-button>
                </el-aside>
                <el-main>
                    <el-table style="width: 100%" border :data="tableData">
                        <el-table-column label="图片" width="200px">
                            <template slot-scope="scope">
                                <img :src="scope.row.picture" class="home__product">
                            </template>
                        </el-table-column>
                        <el-table-column label="链接">
                            <template slot-scope="scope">
                                <a target="_blank" :href="scope.row.href">{{scope.row.href}}</a>
                            </template>
                        </el-table-column>
                        <el-table-column label="操作">
                            <template slot-scope="scope">
                                <el-button type="success">下载</el-button>
                                <el-button type="warning">发送到头条</el-button>
                            </template>
                        </el-table-column>
                    </el-table>
                </el-main>
            </el-container>
        </el-container>
    </div>

    <!-- import Vue before Element -->
    <script src="https://unpkg.com/vue/dist/vue.js"></script>
    <!-- import JavaScript -->
    <script src="https://unpkg.com/element-ui/lib/index.js"></script>
    <script>
    new Vue({
        el: '#app',
        data: function() {
            return {
                tableData: <%- data %>
            }
        }
    })
    </script>
</body>
</html>